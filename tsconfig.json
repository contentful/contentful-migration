{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2017",
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "esnext"],
    "sourceMap": true,
    "typeRoots": ["./typings", "./node_modules/@types"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ]
}
